class Solution {
    public int reverse(int x) {
        long rev=0;
        int num=x;
        while(num!=0){
            int value=num%10;
            rev=rev*10+value;

            if(rev>Integer.MAX_VALUE || rev<Integer.MIN_VALUE){
                return 0;
            }
            num/=10;
        }
        return (int)rev;

        
    }
}
