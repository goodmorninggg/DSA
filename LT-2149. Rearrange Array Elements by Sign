class Solution {
    public int[] rearrangeArray(int[] nums) {
        int n=nums.length;
        int ans[]=new int[n];

        int pos=0;
        int neg=1;

        for(int value:nums){
            if(value>=0){
                ans[pos]=value;
                pos+=2;

            }else{
                ans[neg]=value;
                neg+=2;
            }
        }
        return ans;
        
    }
}
